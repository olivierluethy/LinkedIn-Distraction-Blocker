{
    "manifest_version": 3,
    "name": "LinkedIn-Feed Cleaner",
    "version": "1.0",
    "description": "A Chrome extension to remove distracting elements inside LinkedIn for a cleaner experience.",
    "permissions": [
      "activeTab",
      "scripting"
    ],
    "content_scripts": [
      {
        "matches": ["https://www.linkedin.com/*"],
        "js": ["hideFeed.js"],
        "run_at": "document_idle"
      }
    ],
    "icons": {
      "16": "logo.png",
      "48": "logo.png",
      "128": "logo.png"
    }
  }